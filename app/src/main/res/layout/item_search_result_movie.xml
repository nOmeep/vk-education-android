<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners_items"
        android:padding="4dp"
        android:layout_marginBottom="5dp">


    <ImageView
            android:id="@+id/ivMoviePoster"
            android:layout_width="80dp"
            tools:src="@drawable/ic_launcher_foreground"
            android:layout_height="105dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="2dp"
            app:layout_constraintVertical_bias="1.0"/>

    <TextView
            android:id="@+id/tvTitle"
            android:layout_marginStart="8dp"
            android:layout_width="0dp"
            android:layout_marginEnd="16dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            tools:text="Sample name"
            app:layout_constraintStart_toEndOf="@+id/ivMoviePoster"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <TextView
            android:id="@+id/tvYear"
            android:layout_marginStart="8dp"
            android:layout_width="0dp"
            android:layout_marginEnd="16dp"
            tools:text="sample year"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintLeft_toRightOf="@id/ivMoviePoster"
            android:textColor="@color/light_text"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toEndOf="@+id/ivMoviePoster"
            app:layout_constraintEnd_toEndOf="parent" />

    <TextView
            android:id="@+id/tvDescription"
            android:layout_width="0dp"
            tools:text="sample description"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/tvYear"
            app:layout_constraintLeft_toRightOf="@id/ivMoviePoster"
            android:textColor="@color/light_text"
            android:textSize="12sp"
            android:layout_margin="8dp"
            app:layout_constraintEnd_toStartOf="@+id/tvAddToList"
            app:layout_constraintStart_toEndOf="@+id/ivMoviePoster"
            app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
            android:id="@+id/tvAddToList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_to_list"
            android:layout_marginEnd="16dp"
            android:textStyle="italic|bold"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    <TextView
            tools:text="6.5"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="2dp"
            android:background="@drawable/rounded_corners_rating"
            android:id="@+id/tvRating"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="3dp" />

</androidx.constraintlayout.widget.ConstraintLayout>

